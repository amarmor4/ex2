<Window x:Class="ex2.MessageWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex2"
        mc:Ignorable="d" Closing="Window_Closing"
        Title="MessageWin" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtBlockMsg" HorizontalAlignment="Center" Margin="0,20,0,0"></TextBlock>
        <Button x:Name="stnMainMenu" Grid.Row="1" HorizontalAlignment="Center" Height="25" Click="stnMainMenu_Click">Back to main menu</Button>
    </Grid>
</Window>
